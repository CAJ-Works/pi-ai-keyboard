# LLM Configuration (Ollama)
# Connects to your docker container on port 11434
# HOST_IP should be your Windows machine's IP address (e.g. 192.168.x.x)
LLM_BASE_URL=http://192.168.1.X:11434/v1
LLM_API_KEY=ollama
LLM_MODEL=llama3.1:8b

# STT Configuration (Faster-Whisper-Server)
# Connects to your docker container on port 8000
STT_BASE_URL=http://192.168.1.X:8000/v1
STT_API_KEY=whisper
STT_MODEL=whisper-large-v3-turbo

# General
SAVED_PASSWORD=your_password_here
DEBUG_LLM=True
